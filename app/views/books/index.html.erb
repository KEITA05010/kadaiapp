<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
   
  </head>

  <body>


<h1>Books</h1> 
<table>
<thead>
<tr>
      <th>Title</th>
      <th>Body</th>
</tr>
</thead>

<tbody>
<%@books.each do |book| %>


        <tr>
            <td><%=book.title%></td>
            <td><%=book.body%></td>
            <td><%=link_to 'Show', book %></td>
            <td><%=link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        
  
    
   
  <%end%>
  </tbody>
  </table>
     
  


<h2>New book</h2>
<%=form_with model: @book  do |f| %>
<% if @book.errors.any? %>
  　<%= @book.errors.count %>errors prohibited this book from being saved
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
  <% end %>


<div>
<%=f.label :title %>
<%=f.text_field :title %>
</div>

<div>
<%=f.label :body %>
<%=f.text_area :body %>
</div>


<%=f.submit 'Create Book'%>
<%end%>

  </body>
</html>